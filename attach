for ((i=1;i<=10;i++)) do
virt-clone   --original  win10  --name  btd$i   --file  /var/lib/libvirt/images/btd$i.qcow2
done
disk="a b c d e f g h i j"
k=1
for i in ${disk};
   do
       a=`virsh attach-disk btd$k /dev/sd${i} sda --targetbus sata --current`
       
       if [ ! -n "$a" ]; then
          break 1 ;
      else
      echo "finish"
      fi
  
   let k++
done
for ((i=1;i<=10;i++)) do
virsh start btd$i
sleep 30s
virsh qemu-monitor-command btd$i --hmp "balloon 8196"
done
